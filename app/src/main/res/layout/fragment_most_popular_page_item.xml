<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    android:orientation="vertical"
    android:padding="20dip">

    <ImageView
        android:id="@+id/fragment_most_popular_item_image"
        android:layout_width="62dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeSplitBackground" />

    <TextView
        android:id="@+id/fragment_most_popular_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BONJOUR"
        app:layout_constraintLeft_toRightOf="@+id/fragment_most_popular_item_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"

        />


</android.support.constraint.ConstraintLayout>